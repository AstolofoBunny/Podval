    "PGDATABASE": "neondb",
    "PGHOST": "ep-damp-water-a23l5t5q-pooler.eu-central-1.aws.neon.tech",
    "PGPORT": "5432",
    "PGUSER": "neondb_owner",
    "PGPASSWORD": "npg_3gdZcoGIJC0q"
  }
