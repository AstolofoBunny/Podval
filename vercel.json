{
  "version": 2,
  "builds": [
    {
      "src": "server/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["server/**"]
      }
    },
    {
      "src": "dist/public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/index.ts"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "server/index.ts"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|svg|json|ico|woff2?))",
      "dest": "dist/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "dist/public/index.html"
    }
  ],
  "env": {
    "DATABASE_URL": "postgresql://neondb_owner:npg_ZM3j1GeFNyRH@ep-small-breeze-a25z1x7x.eu-central-1.aws.neon.tech/neondb?sslmode=require",
    "PGDATABASE": "neondb",
    "PGHOST": "ep-small-breeze-a25z1x7x.eu-central-1.aws.neon.tech",
    "PGPORT": "5432",
    "PGUSER": "neondb_owner",
    "PGPASSWORD": "npg_ZM3j1GeFNyRH"
  }
}

